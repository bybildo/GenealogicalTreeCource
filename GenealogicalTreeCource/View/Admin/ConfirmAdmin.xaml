            </Image.RenderTransform>
        </Image>

        <TextBlock Text="LOGIN" FontSize="36" FontWeight="Bold" Foreground="LightGreen"
        FontFamily="Comic Sans MS"  
        HorizontalAlignment="Center" VerticalAlignment="Top"
        Margin="0,42,0,0" TextWrapping="Wrap"
        TextAlignment="Center" LineHeight="40" Grid.RowSpan="2" Width="226">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Black" />
            </TextBlock.Effect>
        </TextBlock>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Background="#4CAF50" Width="236" Margin="0,10,0,0" Height="273">
            <Border Background="White" Margin="10, 30, 10, 0" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
                <TextBox Height="30" FontSize="14" VerticalContentAlignment="Center" Foreground="#124213" Text="{Binding AcName}" GotFocus="PlaceholderTextBox_GotFocus" Background="Transparent" BorderThickness="0"/>
            </Border>

            <Border Background="White" Margin="10, 20, 10,0" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
                <PasswordBox Height="30" FontSize="14" Foreground="#124213" Background="Transparent" GotFocus="PlaceholderTextBox_GotFocus" BorderThickness="0"/>
            </Border>

            <CheckBox Content="Я не робот" Margin="69, 40, 0, 0" FontSize="15" Foreground="White"/>
            <Button Content="LOGIN" Margin="0, 30, 0, 10" Command="{Binding BackPageAdmin}"/>
        </StackPanel>

    </Grid>

</Page>
