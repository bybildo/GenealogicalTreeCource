        <Style TargetType="ScrollViewer">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>

        <Style TargetType="Canvas">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FocusManager.IsFocusScope" Value="True"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="98*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="432*"/>
        </Grid.RowDefinitions>

        <TextBox Text="{Binding Path=Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,9,14,49" Grid.Row="1" />

        <ListBox x:Name="listBoxItem" ItemsSource="{Binding Path=Search, Mode=OneWay}" Height="110" VerticalAlignment="Top" Grid.Row="1" Margin="10,57,10,0" Grid.RowSpan="3">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <EventSetter Event="MouseDoubleClick" Handler="ViewPerson" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Row="3" Margin="10,17,10,10">
            <Canvas x:Name="GenealogyCanvas" Background="FloralWhite" Focusable="True" FocusManager.IsFocusScope="True" Height="350" Width="900">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="ScaleTransform" />
                        <TranslateTransform x:Name="TranslateTransform" />
                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Page>
