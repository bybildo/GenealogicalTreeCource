<Page x:Class="GenealogicalTreeCource.Xaml.AdministrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GenealogicalTreeCource.Xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdministrationPage" Background="white">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="25"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Переглянути додавання користувача"/>
            <TextBlock Text="Переглянути редагування інформації"/>
            <TextBlock Text="!Сформувати дерево!"/>
        </StackPanel>

        <Frame x:Name="SetWindow" Grid.Row="1" Margin="10" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
