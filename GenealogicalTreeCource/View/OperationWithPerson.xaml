        <Border Background="white" Opacity="0.6" CornerRadius="15" HorizontalAlignment="Left" VerticalAlignment="Top" Width="692" Height="584" Margin="287,28,0,0" Grid.RowSpan="2">
            <StackPanel Margin="10">
                <TextBlock Text="Батько:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox Name="FatherListBox" Height="50" Margin="0,0,0,10" IsEnabled="{Binding CanEditLogicalFields}"/>
                <TextBlock Text="Мати:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox Name="MotherListBox" Height="50" Margin="0,0,0,10" IsEnabled="{Binding CanEditLogicalFields}"/>
                <TextBlock Text="Шлюб з:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox Name="MarriageListBox" Height="50" Margin="0,0,0,10" IsEnabled="{Binding CanEditLogicalFields}"/>
                <TextBlock Text="Діти:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox Name="ChildrenListBox" Height="50" Margin="0,0,0,10" IsEnabled="{Binding CanEditLogicalFields}"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Стать:" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <ComboBox Name="GenderComboBox" Width="169" Margin="0,0,10,0" IsEnabled="{Binding CanEditLogicalFields}">
                        <ComboBoxItem Content="Чоловіча"/>
                        <ComboBoxItem Content="Жіноча"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Дата нарождення:" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <DatePicker Name="BirthDatePicker" IsEnabled="{Binding IsEditMode}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Дата смерті:" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <DatePicker x:Name="DeathDatePicker" IsEnabled="{Binding CanEditLogicalFields}" Width="393"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Button Content="Назад" FontSize="20" Height="39" Width="118"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="831,137,0,0"
