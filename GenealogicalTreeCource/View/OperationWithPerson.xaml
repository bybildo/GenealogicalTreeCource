        <Border Background="White" Opacity="0.6" CornerRadius="15" VerticalAlignment="Top" Height="190" Margin="18,10,737,0" Grid.Row="1">
            <StackPanel Margin="10">
                <TextBlock Text="Ім'я:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Name="FirstNameTextBox" Height="30" Margin="0,0,0,10" IsEnabled="{Binding IsEditMode}"/>
                <TextBlock Text="Прізвище:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Name="LastNameTextBox" Height="30" Margin="0,0,0,10" IsEnabled="{Binding IsEditMode}"/>
